# Unix
alias c="clear"
alias ll="ls -al"

# TMUX
alias tl='tmux list-sessions'
alias tk='tmux kill-session -t'

# Neovim
alias vim="nvim"
alias vi="nvim"

# Cake PHP
alias cake="docker-compose exec -u $(id -u ${USER}):$(id -g ${USER}) php-fpm bin/cake"
alias fpm="docker-compose exec -u $(id -u ${USER}):$(id -g ${USER}) php-fpm"
alias phpfpmcomposer="docker-compose exec -u $(id -u ${USER}):$(id -g ${USER}) php-fpm composer"

# Files/Folders 
alias projects="cd ${HOME}/Documents/projects/"
alias work="cd ${HOME}/Documents/work/"
alias workspace="cd ${HOME}/Documents/workspace/"
alias virtualmachines="cd ${HOME}/Documents/virtualmachines/"
alias code-library="cd ${HOME}/Documents/code-library"

# Git
alias g="git"
alias gco="git checkout"
alias gb="git branch"
alias gc="git commit"
alias gs="git status"
alias gbpurge='git branch --merged | grep -v "\*" | grep -v "master" | grep -v "develop" | grep -v "staging" | xargs -n 1 git branch -d'
# git fetch -p && git branch --merged | grep -v '*' | grep -v 'master' | xargs git branch -d
